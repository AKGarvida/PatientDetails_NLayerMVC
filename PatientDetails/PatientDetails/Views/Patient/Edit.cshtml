@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">

    <head>
        <title>Edit</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body class="d-flex flex-column min-vh-100">
        <div class="container mt-4 mb-4 bg-dark"
             style="max-width: 55%; padding: 30px; display: flex; flex-direction: column; align-items: center;">
            <h2 class="text-center text-white mb-4">Edit Patient Record</h2>
            <hr style="border: none; border-top: 5px solid #fff; width: 100%; margin: 20px 0;">

            @using (Html.BeginForm("Create", "ControllerName", FormMethod.Post, new { @style = "width: 100%; max-width: 600px;" }))
            {
                <div class="mb-3 mt-3">
                    <label for="DosageAmount" style="margin-bottom: 10px; color: white; font-size: 20px;" class="fw-bold">Dosage</label>
                    @Html.TextBox("dosageamount", null, new { @class = "form-control mx-auto", @id = "email", @style = "max-width: 60%;", @placeholder = "Dosage Amount" })
                </div>
                <div class="mb-3">
                    <label for="DrugName" style="margin-bottom: 10px; color: white; font-size: 20px;" class="fw-bold">Drug</label>
                    @Html.TextBox("drugname", null, new { @class = "form-control mx-auto", @id = "pwd", @style = "max-width: 60%;", @placeholder = "Drug Name" })
                </div>
                <div class="mb-3">
                    <label for="PatientName" style="margin-bottom: 10px; color: white; font-size: 20px;" class="fw-bold">Patient</label>
                    @Html.TextBox("pname", null, new { @class = "form-control mx-auto", @id = "pwd", @style = "max-width: 60%;", @placeholder = "Enter Name" })
                </div>
                <div class="card-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-light m-3" data-bs-toggle="tooltip" title="Save Changes">Save</button>
                    <button type="reset" class="btn btn-light m-3" data-bs-toggle="tooltip" title="Clear Input">Clear All</button>
                    <button type="button" class="btn btn-light m-3" data-bs-toggle="tooltip" title="Cancel Now">Cancel</button>
                </div>
            }
        </div>
    </body>
</html>
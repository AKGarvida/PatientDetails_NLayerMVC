@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

    <head>
        <title>Edit</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body class="d-flex flex-column min-vh-100">
        <!-- Centering container -->
        <div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
            <div class="card mb-3" style="max-width: 100%; min-width: 70%; ">

                <div class="card-header bg-dark">
                    <h2 class="text-center text-white">Edit Patient Record</h2>
                </div>

                <hr style="border: none; border-top: 5px solid #000000; width: 100%; margin: 20px 0;">

                <div class="card-body">
                    <div class="d-flex justify-content-center">
                        @using (Html.BeginForm("Create", "ControllerName", FormMethod.Post, new { @style = "width: 100%; max-width: 600px;" }))
                        {
                            <div class="mb-3 mt-3 text-left">
                                <label for="DosageAmount" style="margin-bottom: 10px; font-size: 20px;" class="fw-bold">Dosage</label>
                                @Html.TextBox("dosageamount", null, new { @class = "form-control mx-auto", @id = "email", @style = "max-width: 60%;", @placeholder = "Dosage Amount" })
                            </div>
                            <div class="mb-3 text-left">
                                <label for="DrugName" style="margin-bottom: 10px; font-size: 20px;" class="fw-bold">Drug</label>
                                @Html.TextBox("drugname", null, new { @class = "form-control mx-auto", @id = "pwd", @style = "max-width: 60%;", @placeholder = "Drug Name" })
                            </div>
                            <div class="mb-3 text-left">
                                <label for="PatientName" style="margin-bottom: 10px; font-size: 20px;" class="fw-bold">Patient</label>
                                @Html.TextBox("pname", null, new { @class = "form-control mx-auto", @id = "pwd", @style = "max-width: 60%;", @placeholder = "Enter Name" })
                            </div>
                        }
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-dark m-2" data-bs-toggle="tooltip" title="Save Changes">Save</button>
                        <button type="reset" class="btn btn-dark m-2" data-bs-toggle="tooltip" title="Clear Input">Clear All</button>
                        <button type="button" class="btn btn-dark m-2" data-bs-toggle="tooltip" title="Cancel Now">Cancel</button>
                    </div>
                </div>

            </div>
        </div>
    </body>
</html>

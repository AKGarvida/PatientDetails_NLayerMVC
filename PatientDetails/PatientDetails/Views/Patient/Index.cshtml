
@{
    ViewBag.Title = "Index";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Document Title and Meta Information -->
        <title>Patient Details</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS for styling -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Bootstrap JS Bundle for interactive components -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

        <!-- JQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </head>
    <body class="d-flex flex-column min-vh-100">

        <!-- Content Section -->
        <div class="container-fluid mt-4">
            <!-- Section Header -->
            <h2 class="text-left fw-bold">Patient Details</h2>

            <!-- Horizontal Divider -->
            <div style="height: 5px; background-color: black; margin: 20px 0;"></div>

            <!-- Create New Record Button -->
            <button type="button" id="createnewrecordBtn" class="btn btn-light fw-bold align-baseline"
                    data-bs-toggle="tooltip" title="Go to create" style="font-size: 20px; margin-bottom: 10px; border: none;">
                Create New Record
            </button>

            <!-- Patient Table -->
            <div class="table-responsive">
                <table class="table table-dark table-hover text-center align-middle">
                    <thead>
                        <!-- Row for Search Filters -->
                        <tr>
                            <th style="font-size: 20px;">Search By:</th>
                            <!-- Search by Date -->
                            <th><input type="date" class="form-control" id="date" placeholder="Date" data-bs-toggle="tooltip" title="Select Date"></th>
                            <!-- Search by Dosage -->
                            <th><input type="text" class="form-control" id="dosage" placeholder="Dosage"></th>
                            <!-- Search by Drug -->
                            <th><input type="text" class="form-control" id="drug" placeholder="Drug"></th>
                            <!-- Search by Patient -->
                            <th><input type="text" class="form-control" id="patient" placeholder="Patient Name"></th>
                            <!-- Reset Search Button -->
                            <th>
                                <button type="button" id="resetBtn" class="btn btn-link fw-bold text-white" style="font-size: 20px;"
                                        data-bs-toggle="tooltip" title="Reset searches">
                                    Reset
                                </button>
                            </th>
                        </tr>

                        <!-- Column Headers -->
                        <tr>
                            <th></th>
                            <th>Date</th>
                            <th>Dosage</th>
                            <th>Drug</th>
                            <th>Patient</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Example Patient Records -->
                        <tr>
                            <td>
                                <!-- Edit and Delete Buttons for Record -->
                                <button type="button" class="btn btn-primary me-2" data-bs-toggle="tooltip" title="Edit Record">Edit</button>
                                <button type="button" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete Record">Delete</button>
                            </td>
                            <td>19/12/2024</td>
                            <td>1.50</td>
                            <td>Biogesic</td>
                            <td>John Clarence Perades</td>
                            <td></td>
                        </tr>
                        <!-- Additional Records -->
                        <tr>
                            <td>
                                <button type="button" class="btn btn-primary me-2" data-bs-toggle="tooltip" title="Edit Record">Edit</button>
                                <button type="button" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete Record">Delete</button>
                            </td>
                            <td>19/12/2024</td>
                            <td>2.00</td>
                            <td>Paracetamol</td>
                            <td>Mary Moe Moe Sai D' Cow</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                <button type="button" class="btn btn-primary me-2" data-bs-toggle="tooltip" title="Edit Record">Edit</button>
                                <button type="button" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete Record">Delete</button>
                            </td>
                            <td>19/12/2024</td>
                            <td>0.75</td>
                            <td>Ibuprofen</td>
                            <td>Julie Dooley Doughnuts Coconuts</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                <button type="button" class="btn btn-primary me-2" data-bs-toggle="tooltip" title="Edit Record">Edit</button>
                                <button type="button" class="btn btn-danger" data-bs-toggle="tooltip" title="Delete Record">Delete</button>
                            </td>
                            <td>19/12/2024</td>
                            <td>3.75</td>
                            <td>Tempra</td>
                            <td>Peter Griffin</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination Controls -->
            <ul class="pagination d-flex justify-content-center">
                <li class="page-item"><a class="page-link text-white bg-dark" href="#">Previous</a></li>
                <li class="page-item active"><a class="page-link text-white bg-dark" href="#">1</a></li>
                <li class="page-item"><a class="page-link text-white bg-dark" href="#">2</a></li>
                <li class="page-item"><a class="page-link text-white bg-dark" href="#">3</a></li>
                <li class="page-item"><a class="page-link text-white bg-dark" href="#">Next</a></li>
            </ul>
        
        </div>
        <script src="~/Scripts/TooltipModal.js"></script>
    </body>
</html>
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- Centering container -->
<div class="d-flex justify-content-center align-items-center m-3" style="min-height: 70vh;">

    <div class="card mb-3" style="max-width: 100%; min-width: 70%; border-width: 2px; border-color: #000000">

        <div class="card-header bg-dark" style="border-width: 2px; border-color: #000000">
            <h2 class="text-center text-white">Create New Patient Record</h2>
        </div>

        <div class="card-body" style="border-width: 2px; border-color: #000000">
            <!-- Alerts -->
            <div class="mb-3">
                <div class="alert alert-success d-none" id="sAlert" style="z-index: 1050;">
                    <strong>Success!</strong> Patient record has been created successfully.
                </div>
                <div class="alert alert-danger d-none" id="eAlert" style="z-index: 1050;">
                    <strong>Error!</strong> Failed to save patient record.
                </div>
            </div>

            <div class="d-flex justify-content-center">
                @using (Html.BeginForm("Create", "PatientController", FormMethod.Post, new { @id = "create", @style = "width: 100%; max-width: 600px;" }))
                {
                    <!-- Dosage Amount -->
                    <div class="mb-4 mt-4 row align-items-center">
                        <label for="DosageAmount" class="col-sm-3 col-form-label fw-bold" style="font-size: 20px;">Dosage</label>
                        <div class="col-sm-9" data-bs-toggle="tooltip" title="Input Dosage Amount">
                            @Html.TextBox("dosageamount", null, new { @class = "form-control", @id = "dsgamount", @placeholder = "Dosage Amount" })
                        </div>
                    </div>

                    <!-- Drug Name -->
                    <div class="mb-4 row align-items-center">
                        <label for="DrugName" class="col-sm-3 col-form-label fw-bold" style="font-size: 20px;">Drug</label>
                        <div class="col-sm-9" data-bs-toggle="tooltip" title="Input Drug Name">
                            @Html.TextBox("drugname", null, new { @class = "form-control", @id = "drgname", @placeholder = "Drug Name" })
                        </div>
                    </div>

                    <!-- Patient Name -->
                    <div class="mb-4 row align-items-center">
                        <label for="PatientName" class="col-sm-3 col-form-label fw-bold" style="font-size: 20px;">Patient</label>
                        <div class="col-sm-9" data-bs-toggle="tooltip" title="Input Patient Name">
                            @Html.TextBox("pname", null, new { @class = "form-control", @id = "pname", @placeholder = "Enter Name" })
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card-footer" style="border-width: 2px; border-color: #000000">
            <div class="d-flex justify-content-center">
                <button type="submit" id="save" class="btn btn-dark m-2" data-bs-toggle="tooltip" title="Save Changes">Save</button>
                <button type="reset" id="clr" class="btn btn-dark m-2" data-bs-toggle="tooltip" title="Clear Input">Clear All</button>
                <button type="button" class="btn btn-dark m-2" data-bs-toggle="tooltip" onclick="window.location.href = '/Patient/Index'" ; title="Cancel Now">Cancel</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/Create.js"></script>
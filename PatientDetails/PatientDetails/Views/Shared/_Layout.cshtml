@* Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Document Title and Meta Information -->
    <title>@ViewData["Title"] - HealthTrackPro</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS Bundle for interactive components -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- Header Section -->
    <div class="p-3 bg-dark text-white d-flex align-items-center">
        <!-- Logo for the application -->
        <img src="~/images/HPLogo.gif" alt="Logo" class="img-fluid" style="max-height: 100px;">

        <!-- Application Title -->
        <h1 class="mb-0 ms-2 text-break fw-bold">HealthTrackPro</h1>
    </div>

    <!-- Content Section -->
    <div class="container-fluid">
        @RenderBody()

        <!-- Modal (Initially Hidden) -->
        <div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="profileModalLabel">LinkedIn Profile</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Visit my <a href="https://www.linkedin.com/in/edison-iii-garvida-aba57a285" target="_blank">LinkedIn Profile</a>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Confirm</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Footer Section -->
    <footer class="mt-auto p-2 bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <!-- Footer Content -->
                    <p class="fw-bold text-break mb-0">
                        <!-- Author name with click event to toggle modal -->
                        <span id="author" style="cursor: pointer;" data-bs-toggle="tooltip" title="Click Me!">
                            Author: Edison Garvida III
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Modal for Author Details -->
    <div class="modal fade" id="authorModal" tabindex="-1" aria-labelledby="authorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authorModalLabel">LinkedIn Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Visit my LinkedIn profile by clicking the link below:</p>
                    <a href="https://www.linkedin.com/in/edison-iii-garvida-aba57a285" class="btn btn-light" target="_blank">
                        https://www.linkedin.com/in/edison-iii-garvida-aba57a285
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/AuthorModal.js"> </script>
    <script src="~/Scripts/Tooltip.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
